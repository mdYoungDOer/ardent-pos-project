{
    "name": "ardent-pos/backend",
    "description": "Ardent POS Backend API",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "firebase/php-jwt": "^6.8",
        "vlucas/phpdotenv": "^5.5",
        "sendgrid/sendgrid": "^8.0",
        "ramsey/uuid": "^4.7",
        "guzzlehttp/guzzle": "^7.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "ArdentPOS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArdentPOS\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
